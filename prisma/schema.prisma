generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id       String   @id @unique @default(uuid())
    email    String   @unique
    password String
    name     String?  @db.VarChar(255)
    role     RoleEnum @default(contentManager)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum RoleEnum {
    admin
    contentManager
    gameMaster
}
